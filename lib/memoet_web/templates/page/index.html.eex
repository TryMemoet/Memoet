<nav class="header__wrapper">
  <h1 class="header__title">
    Recent decks
  </h1>

  <%= render(MemoetWeb.DeckView, "_home_page_menu.html", conn: @conn) %>
</nav>

<section>
  <ul>
    <%= for deck <- @decks do %>
      <%= render(MemoetWeb.DeckView, "_deck.html", assigns: assigns, conn: @conn, deck: deck) %>
    <% end %>

    <%= if @decks == [] do %>
      <li class="text-center">No decks is created yet.</li>
    <% end %>
  </ul>
</section>
